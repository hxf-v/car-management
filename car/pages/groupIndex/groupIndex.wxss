page{
   height:100%;
   background-color:#f8f8f8;
}
.imagesize{
 display:flex;
 justify-content: center;
 align-items:center;
}
.in-image{
    width:730rpx
}
.menu-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  height: 400rpx
}

.menu-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 350rpx;
  height: 350rpx;
  background-color:#ffffff;
  color: #353535;
  box-shadow: 5rpx 5rpx 20rpx #e0e0e0;
  border-radius: 3px
}
.menu-item-line{
    display: flex;
    justify-content: space-around;
    flex-direction: row;
    width: 100%;
    height: 280rpx;
    background-color:#ffffff;
    color: #353535;
    border-radius: 3px;
    box-shadow: 5rpx 5rpx 10rpx #e0e0e0;
}
.line{
    margin-top: 30rpx;
    height: 330rpx;
    width: 723rpx;
    margin-left: 12rpx
}
.item-icon{
  height: 200rpx;
  line-height: 200rpx;
  font-size: 90rpx;
  color: #2d8cf0
}
.item-icon-line{
  height: 280rpx;
  line-height: 280rpx;
  font-size: 90rpx;
  color: #2d8cf0;
   position: relative;
  right: 10rpx
}
.item-text{
  color: #495060;
  line-height: 120rpx;
  height: 120rpx;
  font-size: 32rpx;
}
.item-text-line{
  color: #495060;
  line-height: 280rpx;
  height: 280rpx;
  font-size: 32rpx;
  position: relative;
  right: 30rpx
}