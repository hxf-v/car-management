@import "../../lib/weui.wxss";
page{height:100%}
.picker {
  position: relative;
  padding-left: 30rpx;
  color: #333;
}
.start-date{
  color: #333;
  font-size: 28rpx
}
.picker .rightarr {
  position: absolute;
  right: 30rpx;
  color: #999;
}

.work-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 240rpx;
  background: #c3e1ff;
}

.header-img-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 100rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.header-img {
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  width: 82rpx;
  height: 82rpx;
}

.header-name {
  font-size: 28rpx;
  color: #333;
}

.quickSetTime {
  font-size: 28rpx;
  padding: 13rpx;
}

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-body {
  padding: 20rpx 0;
  margin-top: 60rpx;
}

textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child {
  margin-bottom: 0;
}

.page-section-title {
  font-size: 34rpx;
  color: #2d8cf0;
  font-weight: bold;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.endWorkPanelBig {
  width: 750rpx;
  height: 122%;
  position: absolute;
  left: 50%;
  top: 30%;
  margin-left: -375rpx;
  margin-top: -600rpx;
  background: #333333;
  opacity: .6
}

.endWorkPanel {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around;
  width: 500rpx;
  height: 300rpx;
  border: 1px solid #666;
  border-radius: 10rpx;
  background: #f8f8f8;
  position: absolute;
  left: 50%;
  top: 30%;
  margin-left: -250rpx;
  margin-top: -150rpx;
}
.endWorkBtnPanel{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.button-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  margin-bottom: 60rpx
}

.button-saveAndSubmit{
  width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333;
  background: white;
  border-radius: 50%
}
.button-icon{
  font-size: 66rpx;
  color: #1fa075
}
.button-save-icon{
  color: #3379b7
}
.back-container{
  height: 140rpx
}
